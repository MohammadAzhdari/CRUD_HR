@page
@model IndexModel
@{
    ViewData["Title"] = "تست کراد";
}

<div ng-controller="MainController">


    <div class="container mt-5">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">دسته بندی</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">ویژگی دسته بندی</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">محصول</a>
            </li>
        </ul>
        <div class="tab-content p-3 bg-white" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="نام دسته" aria-label="Recipient's username" aria-describedby="basic-addon2" ng-model="inputCatName">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" ng-click="registerCat()">ثبت</button>
                    </div>
                </div>

                <div class="row" ng-repeat="cat in Categories">
                    <div class="col-md-8">
                        <span>{{cat.id}}-</span>
                        <span>{{cat.name}}</span>
                    </div>
                    <div class="col-md-4 text-right">
                        <button data-toggle="modal" data-target="#myModal" class="btn btn-sm btn-info" ng-click="editCategory(cat.id,cat.name)">ویرایش</button>
                        <button class="btn btn-sm btn-danger" ng-click="deleteCategory(cat.id)">حذف</button>
                    </div>
                    <hr>
                </div>

            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                @*<div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="نام ویژگی" aria-label="Recipient's username" aria-describedby="basic-addon2" ng-model="inputFeatureName">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" ng-click="registerFeature()">ثبت</button>
                    </div>
                </div>

                <div class="row" ng-repeat="cat in Features">
                    <div class="col-md-8">
                        <span>{{cat.id}}-</span>
                        <span>{{cat.name}}</span>
                    </div>
                    <div class="col-md-4 text-right">
                        <button data-toggle="modal" data-target="#myModalFeature" class="btn btn-sm btn-info" ng-click="editFeature(cat.id,cat.name)">ویرایش</button>
                        <button class="btn btn-sm btn-danger" ng-click="deleteFeature(cat.id)">حذف</button>
                    </div>
                    <hr>
                </div>*@
            </div>
        </div>
     
    </div>

    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">ویرایش </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input class="form-control" ng-model="inputEditCatName">
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="regEditCategory()">ذخیره</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="myModalFeature">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">ویرایش </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input class="form-control" ng-model="inputEditFeatureName">
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="regEditFeature()">ذخیره</button>
                </div>

            </div>
        </div>
    </div>
</div>
